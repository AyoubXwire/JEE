<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "https://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="ClientController" class="cigma.controllers.ClientController" scope="singleton">
        <property name="clientService" ref="ClientService" />
    </bean>
    <bean id="ClientService" class="cigma.service.ClientService" scope="singleton">
        <property name="clientRepository" ref="ClientRepository" />
    </bean>
    <bean id="ClientRepository" class="cigma.repositories.ClientRepository" scope="singleton"/>


    <bean id="FactureController" class="cigma.controllers.FactureController" scope="singleton">
        <property name="factureService" ref="FactureService" />
    </bean>
    <bean id="FactureService" class="cigma.service.FactureService" scope="singleton">
        <property name="factureRepository" ref="FactureRepository" />
    </bean>
    <bean id="FactureRepository" class="cigma.repositories.FactureRepository" scope="singleton"/>
</beans>